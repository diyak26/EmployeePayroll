<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="application.controllers.AddEmployeeController"
            prefWidth="400" prefHeight="500">
    <children>
        <VBox spacing="10" alignment="CENTER" layoutX="50" layoutY="30">
            <Label text="Add New Employee" style="-fx-font-size: 18; -fx-font-weight: bold;" />

            <TextField fx:id="txtId" promptText="Employee ID" />
            <TextField fx:id="txtName" promptText="Name" />
            <TextField fx:id="txtDept" promptText="Department" />
            <TextField fx:id="txtBasic" promptText="Basic Salary" />
            <TextField fx:id="txtDA" promptText="DA" />
            <TextField fx:id="txtHRA" promptText="HRA" />
            <TextField fx:id="txtPF" promptText="PF" />

            <HBox spacing="15" alignment="CENTER">
                <Button fx:id="btnSave" text="Save" onAction="#handleSave" />
                <Button fx:id="btnCancel" text="Cancel" onAction="#handleCancel" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>
