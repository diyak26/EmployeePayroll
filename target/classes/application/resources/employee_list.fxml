<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="application.controllers.EmployeeListController"
            stylesheets="@style.css"
            prefWidth="800" prefHeight="550">

    <!-- CENTERED CONTENT -->
    <center>
        <VBox alignment="TOP_CENTER" spacing="20">

            <!-- Title -->
            <Label text="Employee List"
                   style="-fx-font-size: 26px; -fx-font-weight: bold;" />

            <!-- Buttons Row -->
            <HBox alignment="CENTER" spacing="20">
                <Button text="Delete Selected"
                        fx:id="btnDelete"
                        prefWidth="150"
                        onAction="#deleteEmployee" />

                <Button text="View Salary Slip"
                        fx:id="btnSlip"
                        prefWidth="150"
                        onAction="#openSalarySlip" />

                <Button text="+ Add Employee"
                        fx:id="btnAdd"
                        prefWidth="150"
                        onAction="#openAddEmployee" />
            </HBox>

            <!-- Employee Table -->
            <TableView fx:id="tableEmployees"
                       prefHeight="350"
                       maxWidth="700">

                <columns>

                    <TableColumn fx:id="colId" text="ID" prefWidth="70" />
                    <TableColumn fx:id="colName" text="Name" prefWidth="120" />
                    <TableColumn fx:id="colDept" text="Department" prefWidth="120" />
                    <TableColumn fx:id="colBasic" text="Basic Salary" prefWidth="100" />
                    <TableColumn fx:id="colDA" text="DA" prefWidth="70" />
                    <TableColumn fx:id="colHRA" text="HRA" prefWidth="70" />
                    <TableColumn fx:id="colPF" text="PF" prefWidth="70" />
                    <TableColumn fx:id="colGross" text="Gross Salary" prefWidth="100" />
                    <TableColumn fx:id="colNet" text="Net Salary" prefWidth="100" />

                </columns>

            </TableView>

        </VBox>
    </center>

</BorderPane>
