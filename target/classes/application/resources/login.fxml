<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.shape.Rectangle?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="application.controllers.LoginController"
           fx:id="rootPane"
           maxWidth="Infinity" maxHeight="Infinity"
           stylesheets="@style.css">

    <!-- Background Gradient -->
    <Rectangle fx:id="background"
               style="-fx-fill: linear-gradient(to bottom right, #001B47, #0078D7);"
               StackPane.alignment="CENTER"/>

    <!-- Centered Glass Card -->
    <VBox fx:id="loginCard" alignment="CENTER" spacing="18"
          prefWidth="360" prefHeight="420"
          maxWidth="400" maxHeight="500"
          StackPane.alignment="CENTER"
          style="-fx-background-color: rgba(255,255,255,0.10);
                 -fx-background-radius: 20;
                 -fx-border-color: rgba(255,255,255,0.25);
                 -fx-border-radius: 20;
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 20, 0, 0, 10);
                 -fx-padding: 30;">
        <children>

            <Label text="Employee Payroll System"
                   style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: white;"/>

            <Separator prefWidth="220" style="-fx-background-color: white;"/>

            <VBox spacing="5" alignment="CENTER_LEFT">
                <children>
                    <Label text="Username" style="-fx-text-fill: white; -fx-font-size: 13px;"/>
                    <TextField fx:id="usernameField" promptText="Enter username"
                               prefWidth="250" styleClass="glass-input"/>
                </children>
            </VBox>

            <VBox spacing="5" alignment="CENTER_LEFT">
                <children>
                    <Label text="Password" style="-fx-text-fill: white; -fx-font-size: 13px;"/>
                    <PasswordField fx:id="passwordField" promptText="Enter password"
                                   prefWidth="250" styleClass="glass-input"/>
                </children>
            </VBox>

            <Button fx:id="loginButton" text="Login"
                    onAction="#handleLogin"
                    prefWidth="200" styleClass="glow-button"/>

            <Label text="Â© 2025 Payroll System" style="-fx-text-fill: #E0E0E0; -fx-font-size: 11px;"/>
        </children>
    </VBox>
</StackPane>
